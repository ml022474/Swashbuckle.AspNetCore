<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="IdentityServer4" Version="4.1.1" />
    <PackageReference Include="Microsoft.AspNetCore.Authentication.JwtBearer" Version="5.0.3" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\src\Swashbuckle.AspNetCore.SwaggerGen\Swashbuckle.AspNetCore.SwaggerGen.csproj" />
    <ProjectReference Include="..\..\..\src\Swashbuckle.AspNetCore.SwaggerUI\Swashbuckle.AspNetCore.SwaggerUI.csproj" />
    <ProjectReference Include="..\..\..\src\Swashbuckle.AspNetCore.Swagger\Swashbuckle.AspNetCore.Swagger.csproj" />
    <ProjectReference Include="..\..\Swashbuckle.AspNetCore.TestSupport\Swashbuckle.AspNetCore.TestSupport.csproj" />
  </ItemGroup>

  <Target Name="SwaggerToFile" AfterTargets="AfterBuild">
    <PropertyGroup>
      <DotNetSwaggerPath>..\..\..\src\Swashbuckle.AspNetCore.Cli\bin\$(Configuration)\net5.0\dotnet-swagger.dll</DotNetSwaggerPath>
    </PropertyGroup>
    <Exec Command="dotnet $(DotNetSwaggerPath) tofile --host http://example.com --yaml --output swagger.yaml $(OutputPath)$(AssemblyName).dll v1" />
    <Exec Command="dotnet $(DotNetSwaggerPath) tofile --host http://example.com --yaml --output swagger-with-api-key-security.yaml $(OutputPath)$(AssemblyName).dll v1" EnvironmentVariables="ASPNETCORE_ENVIRONMENT=WithApiKeySecurity" />
  </Target>

</Project>
